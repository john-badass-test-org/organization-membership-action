{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "global.d.ts",
    "src/**/*"
  ],
  "compileOnSave": false,
  "tsNode": {
    "compiler": "typescript"
  }
}
